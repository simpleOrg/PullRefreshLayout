<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <TextView
            android:id="@+id/tv_refresh_up_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="@string/tv_refresh"
            android:textSize="12sp"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/tv_refresh_up_load"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/tv_refresh_load"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_refresh_up_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:textSize="12sp"
            android:text="上次刷新时间：2016-6-30 11:09" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_refresh_head"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="4dp"
        android:layout_gravity="center|start"
        android:layout_marginLeft="20dp"
        android:indeterminateBehavior="repeat"
        android:indeterminateDrawable="@drawable/pb_draw"
        android:indeterminateOnly="true" />

    <ImageView
        android:id="@+id/iv_refresh_head_down"
        android:layout_width="12dp"
        android:layout_height="22dp"
        android:layout_gravity="center|start"
        android:layout_marginLeft="29dp"
        android:background="@drawable/refresh_down" />
</FrameLayout>
